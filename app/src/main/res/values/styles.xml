<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopUpTheme" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SliderDefaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">@dimen/std_padding</item>
    </style>

    <style name="SliderVertStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/std_padding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonInToolbar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textOn"/>
        <item name="android:textOff"/>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation" tools:targetApi="lollipop">18dp</item>
        <item name="android:textSize">0px</item>
        <item name="android:background">@drawable/button_toolbar</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
