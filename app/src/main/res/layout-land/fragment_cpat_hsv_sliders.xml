<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <halfardawid.notepadx.activity.colorpalette.hsv.HSVCanalSlider
        android:id="@+id/s0"
        style="@style/SliderDefaultStyle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="hue"
        app:layout_constraintLeft_toRightOf="@+id/alphaCanalSlider"
        app:layout_constraintHorizontal_bias="0.0" />

    <halfardawid.notepadx.activity.colorpalette.hsv.HSVCanalSlider
        android:id="@+id/s1"
        style="@style/SliderDefaultStyle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s0"
        app:type="saturation"
        app:layout_constraintLeft_toRightOf="@+id/alphaCanalSlider" />

    <halfardawid.notepadx.activity.colorpalette.hsv.HSVCanalSlider
        android:id="@+id/s3"
        style="@style/SliderDefaultStyle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s1"
        app:type="value"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/alphaCanalSlider"
        app:layout_constraintVertical_bias="0.0" />

    <halfardawid.notepadx.activity.colorpalette.alpha.AlphaCanalSlider
        style="@style/SliderVertStyle"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/alphaCanalSlider" />
</android.support.constraint.ConstraintLayout>